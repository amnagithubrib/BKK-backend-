{
    "env": { 
        "es6":true, 
        "jest": true,
        "browser": true,
        "es2021": true,
        "node": true
    },
    
    "extends": "standard",
    "parserOptions": { 
        "ecmaVersion": 2022
    },

    "globals": { 
        "__filename":"readonly",
        "__stack":"readonly",
        "__file":"readonly",
        "__line":"readonly",
        "__fili":"readonly",
        "__ext":"readonly",
        "__base":"readonly",
        "__func":"readonly",
        "__dirname":"readonly"
    },

    "rules": { 
        "no-unused-vars": ["warn"],
        "no-reserved-keys": 0,
        "n/handle-callback-err": 0,
        "new-cap": 0,
        "space-before-function-paren": 0,
        "spaced-comment": ["error", "always"],
        "eqeqeq": 0,
        "eol-last": ["error", "always"],
        "quote-props": ["error", "consistent-as-needed"],
        "indent": ["error", 4, { "SwitchCase": 1 } ],
        "quotes": ["error", "double"],
        "semi" : 0,
        "semi-style": ["error", "last"], 
        "no-inner-declarations": 0
    }
}
